<div class="container edit-registration col-md-5">


<h2>Edit <%= resource_name.to_s.humanize %></h2>


  <div class="form-group row">
  <%= link_to "Change Email", "#", data: { target: "#exampleModal1", toggle: "modal" }, class: "nav-link" %>
  </div>


  <div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

         <div class="form-group row">
          <%= f.label :email, class: "col-sm-2 col-form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-10" %>
        </div>

        <div class="form-group row">
          <%= f.label :current_password, class: "col-sm-4 col-form-label" %>
          <%= f.password_field :current_password, autocomplete: "off", class: "col-sm-8" %>
        </div>
      </div>

      <div class="modal-footer">
        <div class="actions">
          <%= f.submit "Update" %>
        </div>
      </div>
      <% end %>
      
    </div>
  </div>
</div>



<div class="form-group row">
<%= link_to "Change password", "#", data: { target: "#exampleModal", toggle: "modal" }, class: "nav-link" %>
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group row">
        <%= f.label :password, class: "col-sm-4 col-form-label" %> 
        <%= f.password_field :password, autocomplete: "off", class: "col-sm-8" %>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, class: "col-sm-4 col-form-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-sm-8" %>
      </div>

      <div class="form-group row">
        <%= f.label :current_password, class: "col-sm-4 col-form-label" %>
        <%= f.password_field :current_password, autocomplete: "off", class: "col-sm-8" %>
      </div>
      </div>

      <div class="modal-footer">
        <div class="actions">
    <%= f.submit "Update" %>
  </div>
      </div>



      <% end %>
      
    </div>
  </div>
</div>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>


</div>



